{% extends "layouts/admin.twig" %}

{% block content %}
<div class="app-layout d-flex">
    <div class="main-content">
        <div id="header-container"></div>

        <main>
            <div class="mb-4">
                <h2 class="fw-bold">Painel de Administração</h2>
                <p class="text-muted">ssssBem-vindo ao painel de controlo do sistema escolar</p>
            </div>

            <div class="row g-4 mb-5">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="text-muted mb-2">Professores</h6>
                                    <h2 class="fw-bold" style="color: var(--primary);">42</h2>
                                </div>
                                <i style="font-size: 2rem;" class="bi bi-person-badge"></i>
                            </div>
                            <a href="gerir-professores.html" class="btn btn-sm btn-primary mt-3 w-100">Gerir</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="text-muted mb-2">Turmas</h6>
                                    <h2 class="fw-bold" style="color: var(--secondary);">18</h2>
                                </div>
                                <i style="font-size: 2rem;" class="bi bi-book"></i>
                            </div>
                            <a href="gerir-turmas.html" class="btn btn-sm mt-3 w-100"
                                style="background-color: var(--secondary); border-color: var(--secondary); color: white;">Gerir</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="text-muted mb-2">Alunos</h6>
                                    <h2 class="fw-bold" style="color: var(--accent);">542</h2>
                                </div>
                                <i style="font-size: 2rem;" class="bi bi-mortarboard"></i>
                            </div>
                            <a href="gerir-alunos.html" class="btn btn-sm mt-3 w-100"
                                style="background-color: var(--accent); border-color: var(--accent); color: white;">Gerir</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header">
                            <h5 class="card-title mb-0 fw-bold">Atividades Recentes</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li class="pb-3 border-bottom">
                                    <strong>Novo Professor Adicionado</strong>
                                    <br><small class="text-muted">Maria Silva - Há 1 hora</small>
                                </li>
                                <li class="pb-3 border-bottom">
                                    <strong>Turma Criada</strong>
                                    <br><small class="text-muted">12ºB - Há 3 horas</small>
                                </li>
                                <li class="pb-3">
                                    <strong>Aluno Registado</strong>
                                    <br><small class="text-muted">Pedro Costa - Há 1 dia</small>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header">
                            <h5 class="card-title mb-0 fw-bold">Estatísticas Rápidas</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Total de Utilizadores:</strong> <span class="badge bg-primary">602</span></p>
                            <p><strong>Ano Letivo Ativo:</strong> <span class="badge bg-success">2023/2024</span></p>
                            <p><strong>Taxa de Ocupação:</strong> <span class="badge bg-warning text-dark">85%</span>
                            </p>
                            <p><strong>Últimas Alterações:</strong> <span class="badge bg-info">Há 1 hora</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}